import java.util.*;
public class MyClass{
public static void main (String args []){
    Scanner sc = new Scanner (System.in);
    int l  = sc.nextInt();
    l =l -1;
    
if (l %2 == 0 && l !=0 && l != 1) {
    System.out.println(l);
}
if (l % 2 ==1 && l !=0 && l != 1)
{
    System.out.println(l-2);
}
    if (l ==0 || l==1) {
        System.out.println ("0");
    }
    
    
}

}
